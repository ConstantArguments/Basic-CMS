<% @page_title = "New Admin User" %>

<%= link_to("<< Back to List", admin_users_path, :class => 'back-link') %>

<div class="admin_users new">
  <h2>Create Admin User</h2>

  <!-- for_for knows to post to subjects_path to create new resource; , ":url => subjects_path, :method => 'post'" not required -->
  <%= form_for(@admin_user) do |f| %>

    <!-- use partial template '_form' with variable 'f' -->
      <!-- if partial template in another DIR then use full path -->
    <%= render(:partial => 'form', :locals => {:f => f}) %>

    <div class="form-buttons">
      <%= f.submit("Create Admin User") %>
    </div>

  <% end %>
</div>
