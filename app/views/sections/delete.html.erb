<% @page_title = "Delete Section?" %>

<%= link_to("<< Back to List", sections_path(:page_id => @page.id), :class => 'back-link') %>

<div class="sections delete">
  <h2>Delete Section</h2>

  <!-- method => 'delete' must be specified or else rails will try to update -->
  <%= form_for(@section, :url => section_path(:page_id => @page.id), :method => 'delete') do |f| %>

    <p>Are you sure you want to permanently delete this section?</p>

    <!-- tell the form builder to get the the object, and the object is the section. -->
    <p class="reference-name"><%= f.object.name %></p>

    <div class="form-buttons">
      <%= f.submit("Delete Section") %>
    </div>

  <% end %>
</div>