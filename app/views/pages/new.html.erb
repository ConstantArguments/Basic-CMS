<% @page_title = "New Page" %>

<%= link_to("<< Back to List", pages_path(:subject_id => @subject.id), :class => 'back-link') %>

<div class="pages new">
  <h2>Create Page</h2>

  <!-- for_for knows to post to pages_path to create new resource; , ":url => pages_path, :method => 'post'" not required -->
  <%= form_for(@page, :url => pages_path(:subject_id => @subject.id)) do |f| %>

    <!-- use partial template '_form' with variable 'f' -->
      <!-- if partial template in another DIR then use full path -->
    <%= render(:partial => 'form', :locals => {:f => f}) %>

    <div class="form-buttons">
      <%= f.submit("Create Page") %>
    </div>

  <% end %>
</div>