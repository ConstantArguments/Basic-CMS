<!-- used in app/helpers/application_helper.rb -->
<!-- check to see if it has an object and if that object has errors whose size is greater than zero. -->
<% if object && object.errors.size > 0 %>
  <div id="error-explanation">
    <h2><%= pluralize(object.errors.size, "error") %> prohibited this record from being saved</h2>
    <p>There where problems with the following fields:</p>

    <!-- list of errors -->
    <ul>
      <% object.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>