<!-- instance variables in templates are available in layouts -->
<% @page_title = "All Subjects" %><!-- set HTML title in layout -->

<%= link_to("<< Back to Menu", admin_path, :class => 'back-link') %>

<div class="subjects index"> <!-- class label by controller and action -->
  <h2>Subjects</h2>

  <%= image_tag('plus_sign.png', :size => '11x11', :alt => 'plus sign') %>
  <%= link_to("Add New Subject", new_subject_path, :class => 'action new') %>

  <table class="listing" summary="Subject list">
    <tr class="header">
      <th>#</th>
      <th>Subject</th>
      <th>Visible</th>
      <th>Pages</th>
      <th>Actions</th>
    </tr>
    <% @subjects.each do |subject| %>
    <tr>
      <td><%= subject.position %></td>
      <td><%= subject.name %></td>
      <td class="center"><%= status_tag(subject.visible) %></td><!-- application_helper.rb -->
      <td class="center"><%= subject.pages.size %></td>
      <td class="actions">
        <!--  restful route helpers used; .id is default, so optional in all -->
        <%= link_to("View Pages", pages_path(:subject_id => subject.id), :class => 'action show') %>
        <%= link_to("Show", subject_path(subject.id), :class => 'action show') %>
        <%= link_to("Edit", edit_subject_path(subject.id), :class => 'action edit') %>
        <%= link_to("Delete", delete_subject_path(subject.id), :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
